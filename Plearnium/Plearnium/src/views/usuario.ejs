                    <li><a href="ranking">RANKING</a></li>
                </ul>
            </nav>
        </div>
        <a href="configuracion"><button type="button" class="button_asignar btn btn-danger">Configuración</button></a>
        <a href="estadisticas"><button type="button" class="button_asignar btn btn-danger">Estadísticas</button></a>
        <a href="conceptos"><button type="button" class="button_asignar btn btn-danger">Conceptos</button></a>
        <a href="verFeedback"><button type="button" class="button_asignar btn btn-danger">Ver Feedback</button></a>
        <a href="trivia"><button type="button" class="button_asignar btn btn-danger">Agregar Trivia</button></a>
        <a href="encuestas"><button type="button" class="button_asignar btn btn-danger">Agregar Encuestas</button></a>
        <table>
            <thead>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Estatus</th>>
                    <th>Tipo</th>
                    <th>Id Grupo</th>
                </thead>
        </table>

        <% users.forEach(function(user, index){ %>
            <div class="row">
                <div class="col">
                    <%- user.id %>
                </div>
                <div class="col">
                    <%- user.nombre %>
                </div>
                <div class="col">
                    <%- user.estatus %>
                </div>
                <div class="col">
                    <%- user.tipo %>
                </div>
                <div class="col">
                    <%- user.id_grupo %>
                </div>
            </div>  
        <% })%>
        <div class="contenido2">
            <form action="#">
                <div class="field">
                    <span></span>
                    <input type="text" required placeholder="Nombre de grupo">
                </div>
                <div class="field space">
                    <select id = "Asignar juego">
                        <option value = "1">Terny a la obra</option>
                        <option value = "2">Ternybusca</option>
                        <option value = "3">Casa de campo</option>
                    </select>
                </div>
                <div class="field space">
                    <input type="submit" value="Asignar juego">
                </div>
            </form>
        </div>
        <div class="contenido3">
            <form id="asignar_admin" name="asignar_admin" method="POST"  action="/asignar_admin">
                <div class="field">
                    <span></span>
                    <input type="text" required placeholder="Nombre de empleado" name= "nombre">
                </div>
                <div class="field space">
                    <input type="submit" value="Asignar como admin">
                </div>
            </form>
        </div>
    </div>
    </div>
    
